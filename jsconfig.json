{
    "compilerOptions": {
      "target": "ES2017",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "noEmit": true,
      "incremental": true,
      "module": "esnext",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "preserve", 
      "baseUrl": ".",
      "paths": {
        "@/*": ["./*"],
        "@/utils/*": ["./utils/*"],
        "@/components/*": ["./components/*"]
      }
    },
    "include": [
      "next-env.d.ts",
      ".next/types/**/*.ts",
      "**/*.js",
      "**/*.jsx",
      "app/layout.jsx",
      "app/(routes)/bckuphome/page.jsx",
      "app/(routes)/stories/[id]/[storyId]/chat-story/page.jsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  